{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": ["src/custom.d.js", "node"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@src/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@assets/*": ["src/Assets/*"],
      "@components/*": ["src/Components/*"],
      "@layout/*": ["src/Layout/*"],
      "@pages/*": ["src/Pages/*"],
      "@utils/*": ["src/Utils/*"],
    }
  },
  "include": [
    "src",
    "tests",
    "jest.config.js",
    "cypress.config.ts"
  ]
}